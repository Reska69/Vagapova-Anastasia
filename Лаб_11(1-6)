//задание 1
#include <stdio.h>
 
int main(void)
{
   float a, b;
   printf("A:");
   scanf ("%f", &a);
   printf("B:");
   scanf ("%f", &b);
 
   if (a!=b) a=b=(a>b) ? a : b;
   else a=b=0;
 
   printf("a: %f\n b: %f\n",a, b);
    return 0;
}
//задание 2
#include <stdio.h>
 
int main(void)
{
   float a1, a2, a3,sum;
   printf("А:");
   scanf ("%f", &a1);
   printf("В:");
   scanf ("%f", &a2);
   printf("С:");
   scanf ("%f", &a3);
 
    if ((a1>=a2) & (a1>=a3)){
        if (a2>=a3){
            printf("Сумма двух наибольших чисел равна: %f\n",a1+a2);
        } else printf("Сумма двух наибольших чисел равна: %f\n",a1+a3);
    } else if ((a2>=a1) & (a2>=a3))
        if (a1>=a3){
            printf("Сумма двух наибольших чисел равна: %f\n",a1+a2);
        } else printf("Сумма двух наибольших чисел равна: %f\n",a2+a3);
    else
        if (a1>=a2){
            printf("Сумма двух наибольших чисел равна: %f\n",a1+a3);
        } else printf("Сумма двух наибольших чисел равна: %f\n",a2+a3);
   return 0;
}
//задание 3
#include <stdio.h>
#include <stdlib.h>
 
int main(void)
{
   float a, b, c, m, n;
   printf("A:");
   scanf ("%f", &a);
   printf("B:");
   scanf ("%f", &b);
   printf("C:");
   scanf ("%f", &c);
 
   m=abs(a-b);
   n=abs(a-c);
   if (m<n)  {
       printf("Ближайшая к А точка: B\n");
       printf("Расстояние между А и В: %f\n", m);
       }
   else { 
       printf("Ближайшая к А точка: C\n");
       printf("Расстояние между А и В: %f\n", m);
   }
 
   return 0;
}
//задание 4
#include <stdio.h>
 
int main(void)
{
   float x, y;
   printf("Введите координаты точки:\n");
   printf("x:");
   scanf ("%f", &x);
   printf("y:");
   scanf ("%f", &y);
 
   if ((x>0) & (y>0)) printf("Точка находится в I четверти\n");
   else if ((x<0) & (y>0)) printf("Точка находится в II четверти\n");
   else if ((x<0) & (y<0)) printf("Точка находится в III четверти\n");
   else printf("Точка находится в IV четверти\n");
 
   return 0;
}
//задание 5
#include <stdio.h>

int main(void)
{
   int num;
   printf("num:") ;
   scanf ("%i", &num);
   if (num==0) printf("Нулевое" );
   else {
       if (num>0) printf("Положительное ");
       else printf("Отрицательное ");
       if ((num%2)== 0) printf("чётное ");
       else printf("нечётное ");
   }
   printf("число.");

   return 0;
}
//задание 6
#include <stdio.h>
 
int main(void)
{
   int num;
   printf("num:") ;
   scanf ("%i", &num);
 
   if ((num%2) == 0) printf("Чётное ");
   else printf("Нечётное ");
   if (num>99) printf("трёхзначное ");
   else if ((99>=num) & (num > 9)) printf("двухзначное ");
   else if (num <= 9)  printf("однозначное ");
   printf("число.");
 
   return 0;
}
