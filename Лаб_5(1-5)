//задание 1
#include <stdio.h>
#include <math.h>
 
int main(void)
{
    float x1,y1;
    printf("x1:");
    scanf ("%f", &x1);
    printf("y1:");
    scanf ("%f", &y1);
 
    float x2,y2;
    printf("x2:");
    scanf ("%f", &x2);
    printf("y2:");
    scanf ("%f", &y2);
 
    printf("Расстояние между точками равно: %f\n",sqrt(pow(x1-x2,2)+pow(y1-y2,2)));
 
    return 0;
}
//задание 2
#include <stdio.h>
#include <math.h>
 
int main(void)
{
    float A, B, C, AC, BC;
    printf("Введите точку A: ");
    scanf ("%f", &A);
 
    printf("Введите точку B: ");
    scanf ("%f", &B);
 
    printf("Введите точку C: ");
    scanf ("%f", &C);
 
    AC = fabsf(A-C);
    printf("AC: %f\n", AC);
 
    BC = fabsf(B-C);
    printf("BC: %f\n", BC);
 
    printf("AC+BC: %f\n",BC+AC);
 
    return 0;
}
//Задание 3
#include <stdio.h>
#include <math.h>
 
int main(void)
{
    float A, B, C, AC, BC;
    printf("Введите точку A: ");
    scanf ("%f", &A);
 
    printf("Введите точку B: ");
    scanf ("%f", &B);
 
    printf("Введите точку C, находящуюся между А и В: ");
    scanf ("%f", &C);
 
    AC = fabsf(A-C);
    BC = fabsf(B-C);
 
    printf("AC*BC: %f\n",BC*AC);
 
    return 0;
}
//Задание 4
#include <stdio.h>
#include <math.h>
 
int main(void)
{
    float x1,y1;
    printf("Введите координату x1:");
    scanf ("%f", &x1);
    printf("Введите координату y1:");
    scanf ("%f", &y1);
 
    float x2,y2;
    printf("Введите координату x2:");
    scanf ("%f", &x2);
    printf("Введите координату y2:");
    scanf ("%f", &y2);
 
    printf("Периметр прямоугольника равен: %f\n",2*(fabsf(x1-x2)+fabsf(y1-y2)));
 
    printf("Площадь прямоугольника равна: %f\n",fabsf(x1-x2)*fabsf(y1-y2));
    return 0;
}
//задание 5
#include <math.h>
 
int main(void)
{
    float x1,y1;
    printf("Введите координату x1:");
    scanf ("%f", &x1);
    printf("Введите координату y1:");
    scanf ("%f", &y1);
 
    float x2,y2;
    printf("Введите координату x2:");
    scanf ("%f", &x2);
    printf("Введите координату y2:");
    scanf ("%f", &y2);
 
    float x3,y3;
    printf("Введите координату x3:");
    scanf ("%f", &x3);
    printf("Введите координату y3:");
    scanf ("%f", &y3);
 
     float a,b,c;
    a=sqrt(pow(x1-x2,2)+pow(y1-y2,2));
    b=sqrt(pow(x2-x3,2)+pow(y2-y3,2));
    c=sqrt(pow(x3-x1,2)+pow(y3-y1,2));
 
    float S,p;
    p=(a+b+c)/2;
    S=sqrt(p*(p-a)*(p-b)*(p-c));
    printf("Площадь треугольника равна: :%f\n",S);
    printf("Периметр треугольника равен: :%f\n", p*2);
 
    return 0;
}
