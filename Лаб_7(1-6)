//задание 1
#include <stdio.h>

int main()
{
    float a;
    
    printf("Введите угол в градусах: ");
    scanf("%f", &a);
    
    if ((a>0)&&(a<360)) {
        a=a*3.14/180;
        printf ("Значение угла в радианах равно: %f", a);
    }
    else printf ("Введено некорректное значение.");
    
    

    return 0;
}
//задание 2
#include <stdio.h>

int main()
{
    float a;
    
    printf("Введите угол в радианах: ");
    scanf("%f", &a);
    
    if ((a>0)&&(a<6.28)) {
        a=a*180/3.14;
        printf ("Значение угла в градусах равно: %f", a);
    }
    else printf ("Введено некорректное значение.");
    
    

    return 0;
}
//задание 3
#include <stdio.h>
 
int main(void)
{
    float x,a,y;
    printf("X:");
    scanf ("%f", &x);
 
    printf("A:");
    scanf ("%f", &a);
 
    printf("Y:");
    scanf ("%f", &y);
 
    float price;
    price=a/x;
 
    printf("Цена за киллограмм:%f\n",price);
 
    printf("Стоимость:%f\n",y*price);
 
    return 0;
}
//задание 4
#include <stdio.h>
 
int main(void)
{
    float v1,v2,s,t;
    printf("Введите скорость первого автомобиля(км/ч): ");
    scanf ("%f", &v1);
 
    printf("Введите скорость второго автомобиля(км/ч): :");
    scanf ("%f", &v2);
 
    printf("Введите первоначальное расстояние(км): ");
    scanf ("%f", &s);
 
    printf("Сколько времени прошло(ч): ");
    scanf ("%f", &t);
 
    printf("Расстояние между автомобилями равно: %f\n км",s+v1*t+v2*t);
 
    return 0;
}
//задание 5
#include <stdio.h>
#include <math.h>
 
int main(void)
{
    float A,B;
    printf("A:");
    scanf ("%f", &A);
 
    printf("B:");
    scanf ("%f", &B);
 
    printf("Корень уравнения A*x + B = 0 равен: %f\n",-1*B/A);
 
    return 0;
}
//задание 6
#include <stdio.h>
#include <math.h>
 
int main(void)
{
    float A1,B1,C1,A2,B2,C2;
    printf("A1:");
    scanf ("%f", &A1);
 
    printf("B1:");
    scanf ("%f", &B1);
 
    printf("C1:");
    scanf ("%f", &C1);
 
    printf("A2:");
    scanf ("%f", &A2);
 
    printf("B2:");
    scanf ("%f", &B2);
 
    printf("C2:");
    scanf ("%f", &C2);
 
    float D;
    D=A1*B2-A2*B1;
 
    float x,y;
    x=(C1*B2-C2*B1)/D;
    y=(A1*C2-A2*C1)/D;
    
    if (y=-0) y=0;
 
    printf("Решением системы уравнений является пара чисел\nx=%f\ny:%f\n",x,y);
