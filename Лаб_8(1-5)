//задание 1
#include <stdio.h>

int main()
{
    int v;
    
    printf("Введите размер файла(байт): ");
    scanf("%d", &v);
    printf("Данный файл занимает %d полных килобайт", v/1024);

    return 0;
}
//задание 2
#include <stdio.h>

int main()
{
    int a, b, k;
    
    printf("Введите A: ");
    scanf("%d", &a);
    printf("Введите B, меньшее А: ");
    scanf("%d", &b);
    
    if (a>b) {
        k=a/b;
        printf("Количество отрезков В, размещенных на отрезке A: %d", k);
    }
    else printf("Введены некорректные данные");
    return 0;
}
//задание 3
#include <stdio.h>

int main()
{
    int a, b, k;
    
    printf("Введите A: ");
    scanf("%d", &a);
    printf("Введите B, меньшее А: ");
    scanf("%d", &b);
    
    if (a>b) {
        k=a%b;
        printf("Длина незанятого отрезка A: %d", k);
    }
    else printf("Введены некорректные данные");
    return 0;
}
//задание 4
#include <stdio.h>

int main()
{
    int a, d, e;
    
    printf("Введите двузначное число: ");
    scanf("%d", &a);

    if ((a/100==0)&&(a/10>0)) {
        d=a/10;
        e=a%10;
        a=e*10+d;
        printf("Число с перестановкой: %d", a);
    }
    else printf("Введены некорректные данные");
    return 0;
}
//задание 5
#include <stdio.h>

int main()
{
    int a, d, e, s;
    
    printf("Введите трёхзначное число: ");
    scanf("%d", &a);

    if ((a/1000==0)&&(a/100>0)) {
        s=a/100;
        d=a/10;
        d=d%10;
        e=a%10;
        
        a=e*100+d*10+s;
        printf("Число с перестановкой: %d", a);
    }
    
    else printf("Введены некорректные данные");
    return 0;
}
